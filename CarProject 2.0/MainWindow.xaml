                <TextBox x:Name="usernameText" BorderBrush="Transparent" Foreground="White" SelectionBrush="Transparent" IsHitTestVisible="False" SelectionTextBrush="Transparent" Background="Transparent" Text="Bymidda187" Margin="10,10,10,10" FontSize="25" />
