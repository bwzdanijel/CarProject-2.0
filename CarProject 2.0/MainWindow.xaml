            <Grid Height="645">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="415*"/>
                    <ColumnDefinition Width="634*"/>
                    <ColumnDefinition Width="434*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <WrapPanel Height="44">
