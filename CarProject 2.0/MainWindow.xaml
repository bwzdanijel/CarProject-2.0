                </StackPanel>
                <Button Grid.Column="1" Content="Button" HorizontalAlignment="Left" Margin="66,378,0,0" VerticalAlignment="Top" Height="138" Width="276" Click="Button_Click_2"/>
                
                <StackPanel Grid.Column="2" Name="teststackPanel" Visibility="Collapsed">
                    <ToolBarPanel Height="100"/>
                    <Button Content="Button"/>
                </StackPanel>

            </Grid>


            <DockPanel LastChildFill="False" Height="74" Width="1480">
                <StackPanel>
                    <Button Content="Back" FontSize="25" FontWeight="Bold" Foreground="White" BorderBrush="#FF092033" Background="#FF092033" Width="159" Height="52" Margin="20,10,30,10" Click="Button_Click_3" />
